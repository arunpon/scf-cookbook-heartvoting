<div data-component-id="{{id}}" data-scf-component="community-components/components/social/voting/components/hbs/voting" class="scf scf-voting">
            {{#if loggedInUser.loggedIn}}
      			{{#if canUserRespond}}
                    {{#if currentUserResponse}}
                    	{{#if currentUserLike}}
    						<span class="scf-voting-unset scf-vote-heart" type="button" data-voting-value="unset" alt="{{i18n "Vote up"}}" evt="click=vote"></span> 
                    	{{else}}
                    		 <span class="scf-voting-set scf-vote-heart" type="button" data-voting-value="1" alt="{{i18n "Vote up"}}" evt="click=vote"></span> 
                    	{{/if}}
                     {{else}}
                     	 <span class="scf-voting-set scf-vote-heart" type="button" data-voting-value="1" alt="{{i18n "Vote up"}}" evt="click=vote"></span> 
                     {{/if}}
      			{{else}}
      				<span class="scf-vote-heart" type="button" data-voting-value="unset" alt="{{i18n "Vote up"}}"></span> 
      			{{/if}}
            {{#if likedBy}}
            <span> Likers</span>
              <ul class="scf-horizontal-list">
                {{#each likedBy}}
                  <li>
                    <a href='{{this.profileUrl}}'>
                    <img class='scf-vote-avatar-height' src='{{this.avatarUrl}}'></a>
                  </li>
                {{/each}}
              </ul>
            {{/if}}
            {{else}}
				<span class="scf-vote-heart" type="button" data-voting-value="unset" alt="{{i18n "Sign in to vote"}}"></span> 
            {{/if}}
</div>